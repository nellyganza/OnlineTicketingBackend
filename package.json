{
  "name": "server",
  "version": "1.0.0",
  "description": "Nezerwa Project, we want everyone to be happy with buying event ticket online.",
  "main": "index.js",
  "scripts": {
    "build": "babel src -s -d dist",
    "start": "npm run build && node --max-old-space-size=4096 dist/index.js",
    "app:start": "npm run db:migrate && npm run db:seed:undo:all && npm run db:seed &&  nodemon --exec ./node_modules/.bin/babel-node ./src/index.js",
    "lint": "eslint src/ --fix",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo:all": "sequelize db:migrate:undo:all",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo:all": "sequelize db:seed:undo:all",
    "test": "npm run db:migrate && npm run db:seed:undo:all && npm run db:seed && mocha --timeout 50000 --require @babel/polyfill --require @babel/register src/tests/index.js  --exit || true",
    "coverage": "nyc --reporter=lcov --reporter=text npm run test",
    "dev": "npm run lint  && nodemon --exec ./node_modules/.bin/babel-node ./src/index.js"
  },
